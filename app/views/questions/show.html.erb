<div class="question">
<div class="student_header"><%= link_to image_tag("student_header.jpg", :alt   => "h"),students_path %></div>

<% if @question.id <10 %>
		<div class="question-num-9">Q#<%="#{@question.id}"%></div>
<% else %>
	<div class="question-num-10">Q#<%="#{@question.id}"%></div>
	<% end %>


<%= @question.question %>
<p>Don't worry- we won't share your answers with anyone</p>
<%= form_for [@student, @question, @question_response] do |f| %>

	<%= f.radio_button :response, true, :checked => true  %>
	<%= f.label :response, "Yes", :value => "true" %>
	<%= f.radio_button :response, false %>
	<%= f.label :response, "No", :value => "false" %>

	<%= f.submit ("Next Question"), :class => "submit-button" %>


<% end %>




<br>
<div id="info">
<img src="<%=@question.info_image%>" height="200" width="200" alt="kids bullying"/>
</div>
<br>
<br>
<br>
<%= @question.info_text %>
<br>


<div id="story">
<p class="storyhead"><%= @question.story_head %></p>
<br>
<iframe width="320" height="215"
src="<%=@question.story_video%>">
</iframe>
<p><%= @question.story_text %></p>
</div>

 <footer><div id="footer-wrap"><%= link_to image_tag("student_footer.jpg", :alt => "student_footer"), "http://www.stopbullying.gov/get-help-now/" %></div></footer>
